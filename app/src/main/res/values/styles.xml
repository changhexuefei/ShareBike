<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorHeading</item>
        <item name="colorPrimaryDark">@color/colorHeading</item>
        <item name="colorAccent">@color/colorHeading</item>
        <item name="android:screenOrientation">portrait</item>
        <!--<item name="android:windowBackground">@drawable/activity_splash_background</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

    <!--<style name="Theme_Animation" parent="AppTheme">-->

    <!--</style>-->
    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Animation.Activity.Translucent.Style.Main" parent="@android:style/Animation.Translucent">
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="TextAppearance.ExpandedTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/navpage</item>

    </style>


    <!-- 为 Theme 设置背景图 -->
    <style name="Splash_Theme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/timg</item>
    </style>


    <style name="titleStyle">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_title_style</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">-8dp</item>
        <item name="android:paddingBottom">-8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="rb_pay_type">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/checked_type_selector</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="login_title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="layout_style">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="user_info">
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_style">
        <item name="android:drawableRight">@mipmap/forward</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="text_other_style">
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="checkbox">
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:scaleY">0.5</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="recharge_text_style">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/yuandian</item>
    </style>

    <style name="user_guide_info">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:drawableRight">@mipmap/forward</item>
    </style>

    <!-- 点击覆盖物弹出层 -->
    <style name="PopupAnimation" parent="android:Animation">

        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="PopupWindowAnimation" parent="android:Animation">

        <item name="android:windowEnterAnimation">@anim/popuwindow_push_top_in</item>
        <item name="android:windowExitAnimation">@anim/popuwindow_push_top_out</item>
    </style>

    <style name="rb_money_check">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">108dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/money_checked_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/money_checked_selector_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rg_money">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <!-- item name="android:windowBackground"         设置背景透明度及其颜色值 -->
    <!-- item name="android:windowIsTranslucent"      设置当前Activity是否透明-->
    <!-- item name="android:windowAnimationStyle"     设置当前Activity进出方式-->
    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="mobile_style">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:drawableLeft">@mipmap/dot</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="share_style">
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--
       Base application theme, dependent on API level. This theme is replaced
       by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

   -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <style name="layoutStyle">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="title_bar_style">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/common</item>
    </style>

</resources>
