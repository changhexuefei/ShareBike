<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorHeading</item>
        <item name="colorPrimaryDark">@color/colorHeading</item>
        <item name="colorAccent">@color/colorHeading</item>
        <item name="android:screenOrientation">portrait</item>
        <!--<item name="android:windowBackground">@drawable/activity_splash_background</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="titleStyle">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_title_style</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">-8dp</item>
        <item name="android:paddingBottom">-8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="rb_pay_type">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/checked_type_selector</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
