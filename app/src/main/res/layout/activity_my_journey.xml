<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_journey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcch.sharebike.moudle.user.activity.MyJourneyActivity">

    <FrameLayout
        android:id="@+id/journey"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorHeading">

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的行程"
            android:textColor="@color/common"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:text="需要帮助"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </FrameLayout>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/journey_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/journey"
        android:visibility="gone">

    </com.github.jdsjlzx.recyclerview.LRecyclerView>


    <RelativeLayout
        android:id="@+id/default_show"
        android:layout_centerInParent="true"
        android:layout_below="@+id/journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/iv_no_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_view_img"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/iv_no_journey"
        android:id="@+id/no_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="您还没有骑行记录，快来体验吧"
        android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>
