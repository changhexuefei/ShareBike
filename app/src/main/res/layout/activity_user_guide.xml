<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.dcch.sharebike.moudle.user.activity.UserGuideActivity">

    <FrameLayout
        android:id="@+id/userGuideInfo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorHeading">

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="用户指南"
            android:textColor="@color/common"
            android:textSize="16sp" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userGuideInfo"
        android:layout_marginLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="热点问题" />

    <LinearLayout
        android:id="@+id/lock"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            style="@style/user_guide_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="开不了锁" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/breakdown"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.8dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/user_guide_info"
            android:text="发现车辆故障" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/depositInstructions"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0.8dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/user_guide_info"
            android:text="押金说明" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topUpInstructions"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.8dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/user_guide_info"
            android:text="充值说明" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.8dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/user_guide_info"
            android:text="举报违停" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/unFindBike"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0.8dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/user_guide_info"
            android:text="找不到车" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/allQuestion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/user_guide_info"
            android:text="全部问题" />
    </LinearLayout>

</LinearLayout>
