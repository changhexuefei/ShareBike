<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcch.sharebike.moudle.user.activity.ShowRefundResultsActivity">

    <FrameLayout
        android:id="@+id/show_refund_result"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorHeading">

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/refund_result"
            android:textColor="@color/common"
            android:textSize="16sp" />

    </FrameLayout>

    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="25dp"
        android:id="@+id/result_icon"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/show_refund_result"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@mipmap/refund_success_img"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/result_tip"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/result_icon"
        android:textColor="#fa0b0b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refund_success_tip"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/refund_sum"
        android:drawableLeft="@drawable/renminbi"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/result_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cash_pledge"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/refund_tips_two"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/refund_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refund_tip_two"/>


    <Button
        android:id="@+id/verify"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/refund_tips_two"
        android:background="@color/colorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify"
        />



</RelativeLayout>
