<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcch.sharebike.moudle.user.activity.ShowRefundResultsActivity">

    <include layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/result_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:src="@mipmap/refund_success_img"/>

    <TextView
        android:id="@+id/result_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/refund_success_tip"
        android:textColor="@color/colorTitle"/>

    <TextView
        android:id="@+id/refund_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/renminbi"
        android:text="@string/cash_pledge"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/refund_tips_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refund_sum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/refund_tip_two"/>


    <Button
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refund_tips_two"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorTitle"
        android:text="@string/verify"
        android:textColor="@color/white"
        android:textSize="16sp"/>


</RelativeLayout>
