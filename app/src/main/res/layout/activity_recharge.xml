<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dcch.sharebike.moudle.login.activity.RechargeActivity">

    <FrameLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#41c0dc">

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/title_recharge"
            android:textColor="@color/common"
            android:textSize="16sp" />
    </FrameLayout>
    <!--押金-->
    <RelativeLayout
        android:id="@+id/depositArea"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/top"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="@string/tip"
            android:textColor="#716F76"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/renminbi"
            android:gravity="center"
            android:text="299"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>


    <RadioGroup
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/depositArea"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/ali"
            style="@style/rb_pay_type"
            android:drawableLeft="@drawable/alipay_ic"
            android:text="@string/zhifubao" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F9F9F9" />

        <RadioButton
            android:id="@+id/weixin"
            style="@style/rb_pay_type"
            android:drawableLeft="@drawable/weixin_ic"
            android:text="@string/weixin" />

    </RadioGroup>


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay"
        android:drawableLeft="@drawable/yuandian"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/tip1" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:drawableLeft="@drawable/yuandian"
        android:gravity="center"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:text="@string/tip2" />


    <Button
        android:id="@+id/btn_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#41c0dc"
        android:text="@string/recharge"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
