<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dcch.sharebike.moudle.user.activity.JourneyDetailActivity">

    <include layout="@layout/toolbar"/>


    <com.baidu.mapapi.map.MapView
        android:id="@+id/journey_mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

    </com.baidu.mapapi.map.MapView>

    <RelativeLayout
        android:id="@+id/detail_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/sharebike"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="123"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bikeNO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="自行车编号："/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/bikeNO"
            android:text="091700001"/>


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/ridetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bikeNO"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@mipmap/my_trip_item_duration_img"
            android:text="100"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/distanceshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ridetime"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/ridetime"
            android:drawableLeft="@mipmap/riding"
            android:text="10"/>

        <TextView
            android:id="@+id/kCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ridetime"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/distanceshow"
            android:drawableLeft="@mipmap/kcal"
            android:text="400"/>

    </RelativeLayout>

</LinearLayout>
