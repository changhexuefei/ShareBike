<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:focusable="true"
              android:focusableInTouchMode="true"
              tools:context="com.dcch.sharebike.moudle.user.fragment.UnableUnlockFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="@string/unlock"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <RelativeLayout
                android:id="@+id/scan_code"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#eae8e8">

                <ImageView
                    android:id="@+id/report_issue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:src="@mipmap/report_issue_scan_qrcode"/>

                <TextView
                    android:id="@+id/bike_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/report_issue"
                    android:hint="@string/scan_tips"/>

                <TextView
                    android:id="@+id/tips"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_alignLeft="@+id/bike_code"
                    android:layout_below="@+id/bike_code"
                    android:layout_toRightOf="@+id/report_issue"
                    android:text="@string/scan_tip_one"
                    android:textColor="@color/colorTitle"
                    android:textSize="10sp"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/_1"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/_1_tip"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/_2"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/_2_tip"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/_3"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/_3_tip"
                android:textColor="#000000"/>

            <com.louisgeek.multiedittextviewlib.MultiEditInputView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/questionDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                app:contentHeight="100dp"
                app:hintText="@string/question_describe"
                app:maxCount="140"/>


            <TextView
                android:id="@+id/un_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_marginBottom="20dp"
                android:background="#c6bfbf"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/upload"
                android:textColor="#ffffff"
                android:textSize="18sp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
