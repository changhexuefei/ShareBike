<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wallet_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/guide_line_one"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        android:background="@color/lineColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myWallet"/>


    <RelativeLayout
        android:id="@+id/red_packet_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/guide_line_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_line_one">
        <!--android:text="我的红包(已存入余额)"-->
        <TextView
            android:id="@+id/my_red_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"

            android:textSize="16sp"/>

        <TextView
            android:id="@+id/my_red_packet_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/forward"
            android:textSize="16sp"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/guide_line_two"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        android:background="@color/lineColor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_line_one"/>


    <FrameLayout
        android:id="@+id/myWallet"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorHeading"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc"
            android:padding="12dp"
            android:src="@mipmap/back"/>

        <TextView
            style="@style/title_bar_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_wallet"/>

        <TextView
            android:id="@+id/transactionDetail"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/trade_detail"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </FrameLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/card_voucher_page"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_line_two">

        <TextView
            android:id="@+id/my_card_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="@string/my_card_voucher"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/my_card_voucher_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/my_card_voucher"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:drawableRight="@mipmap/forward"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/my_card_voucher"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/guide_line_one"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myWallet"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/riding_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/balance"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/remainingSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/riding_balance"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorTitle"
            android:text="@string/trade"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="parent"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorTitle"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/showArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/chargeDeposit"
            android:layout_alignBottom="@+id/chargeDeposit"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/chargeDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/showArea"
            android:background="@drawable/shape_text_border"
            android:padding="5dp"
            android:text="@string/recharge_deposit"
            android:textColor="@color/white"
            android:textSize="14sp"/>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>