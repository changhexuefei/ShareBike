<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@mipmap/user_voucher">

        <TextView
            android:id="@+id/my_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/qilin_coupon"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_coupon"
            android:layout_below="@+id/my_coupon"
            android:layout_marginTop="5dp"
            android:text="@string/couponNo"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/couponNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/coupon_name"
            android:layout_toRightOf="@+id/coupon_name"
            android:text="@string/_0000000000"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_coupon"
            android:layout_below="@+id/coupon_name"
            android:layout_marginTop="20dp"
            android:drawableLeft="@mipmap/my_trip_item_duration_img"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/time_limit"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/place_name"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/place_name"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/coupon_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorTitle"
            android:textSize="20sp"/>
    </RelativeLayout>


</RelativeLayout>