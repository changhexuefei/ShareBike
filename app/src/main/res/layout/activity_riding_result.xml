<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecbcb"
    tools:context="com.dcch.sharebike.moudle.user.activity.RidingResultActivity">

    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_show"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/colorTitle"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp">

        <RelativeLayout
            android:id="@+id/cost_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ride_money"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ride_money_background"/>

            <TextView
                android:id="@+id/moneyResult_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ride_money"
                android:drawableLeft="@drawable/money_unit"
                android:text="0.00"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/journey_cost"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/ride_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text4"
                android:layout_toRightOf="@+id/text4"
                android:paddingLeft="5dp"
                android:text="0.50元"
                android:textColor="#ffffff"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupon_deduction"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/coupon_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text6"
                android:layout_toRightOf="@+id/text6"
                android:paddingLeft="5dp"
                android:text="0.50元"
                android:textColor="#ffffff"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/riding_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/card_show"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/card_show">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/ride_time"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/rideTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="3分钟"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/myWalletCard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/riding_time"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="0.5dp"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/expenditure"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="10元"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/myDistance"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/myWalletCard"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="0.5dp"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/ride_disance"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/ride_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="0.0km"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/myKcal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/myDistance"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="0.5dp"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/consumption"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/calorimeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:text="0.0kCal"/>


    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/pay_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@color/colorTitle"
        android:text="@string/pay_now"
        android:textColor="@color/color_ff"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myDistance"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0.5dp"
        android:visibility="gone"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp">

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="20dp"
            android:text="@string/riding_result_tip_one"/>

        <TextView
            android:id="@+id/share_journey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="60dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/share_journey_selector"
            android:gravity="center"
            android:text="@string/share_schedule"/>

        <TextView
            android:id="@+id/take_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/take_photo_selector"
            android:gravity="center"
            android:text="@string/taking_pictures"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>
